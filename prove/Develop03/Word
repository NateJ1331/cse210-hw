using System;
using System.Collections.Generic;

namespace Develop03
{
    class Word
    {
        private bool _isHidden = true;
        private string word;
        private string underscores;

        public bool hide()
        {
            return true;
        }

        public bool show()
        {
            return false;
        }

        public string GetWord(string word)
        {     

            if(_isHidden == true)
            {
                return word;
            }
             else
            {
                return underscores;
            }
        }

    }



}